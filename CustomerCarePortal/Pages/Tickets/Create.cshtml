@page
@model CustomerCarePortal.Pages.Tickets.CreateModel
@{
    ViewData["Title"] = "Create";
}

<form asp-page-handler="AddTicket">
    <div class=" mb-3">
        <div class="fs-2 text-white-100 text-uppercase fw-bold">Welcome to Ticket Creation Form</div>
        <span class="fs-4 text-white-100 fw-bold">Please enter details of the Ticket</span>
    </div>
    <div class="mb-3">
        <label for="CustomerEmail" class="form-label">Email address</label>
        <input type="email" class="form-control" id="CustomerEmail" asp-for=NewTicket.Email placeholder="Enter your Email">
    </div>
    <div class="mb-3">
        <label for="InputDescription" class="form-label">Enter Description</label>
        <input type="text" class="form-control" id="InputDescription" asp-for=NewTicket.Description placeholder="Enter the details of the ticket" />
    </div>
    <button type="submit" class="btn btn-outline-primary">Submit</button>
    @if (@Model.flag)
    {
        <a class="btn btn-outline-light" asp-page="/Tickets/Index">View all Tickets</a>
    }
</form>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }