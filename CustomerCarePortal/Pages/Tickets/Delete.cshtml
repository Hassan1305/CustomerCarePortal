@page
@model CustomerCarePortal.Pages.Tickets.DeleteModel
@{
}
<h1 class="blockquote fs-1">Delete</h1>

<h3 class="blockquote fs-3">Are you sure you want to delete this?</h3>
<div>
    <h4 class="fs-4">Team</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Ticket.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Ticket.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Ticket.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Ticket.Description)
        </dd>
        @if (@Model.Ticket.TeamAssigned is not null)
        {
            <dt class="col-sm-2">
                Team Assigned
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Ticket.TeamAssigned.Name)
        </dd>
        } 
        @if (@Model.Ticket.AgentAssigned is not null)
        {
            <dt class="col-sm-2">
                Agent Assigned
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Ticket.AgentAssigned.Name)
        </dd>
        }
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Ticket.Id" />
        <input type="submit" value="Delete" class="btn btn-outline-danger" /> 
        <a class="btn btn-outline-light" asp-page="./Index">Back to List</a>
    </form>
</div>
