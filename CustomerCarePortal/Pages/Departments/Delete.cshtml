@page
@model CustomerCarePortal.Pages.Departments.DeleteModel

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1 class="blockquote fs-1">Delete</h1>

<h3 class="blockquote fs-3">Are you sure you want to delete this?</h3>
<div>
    <h4 class="fs-4">Department</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Department.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Department.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Department.DepartmentManager)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Department.DepartmentManager.Name)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Department.Id" />
        <input type="submit" value="Delete" class="btn btn-outline-danger" /> 
        <a class="btn btn-outline-light" asp-page="./Index">Back to List</a>
    </form>
</div>
