@page
@model CustomerCarePortal.Pages.Teams.CreateModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1 class="blockquote fs-1">Create Team</h1>

<br />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Team.Name" class="control-label"></label>
                <input asp-for="Team.Name" class="form-control" />
                <span asp-validation-for="Team.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Department Name</label>
                <select asp-for="Team.DepartmentId" class="form-select form-control" asp-items="ViewBag.Departments"></select>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Create" class="btn btn-outline-success" />
                <a class="btn btn-outline-light" asp-page="Index">Back to List</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
